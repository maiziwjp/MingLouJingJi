#connector-detail {
  text-align: center;
  line-height: .96rem;
  background: #fff;
  height: .96rem;
  padding: 0 .2rem;
  font-size: .3rem;
  .icon {
    font-size: .32rem;
    color: #0af;
  }
}
#detail-context {
  .bar {
    background: #fff;
    padding: .22rem .2rem;
    margin-top: .3rem;
    .bar-lists {
      li {
        line-height: .6rem;
        font-size: .24rem;
      }
      .intro {
        display: inline-block;
        width: 6rem;
      }
      .label {
        display: inline-block;
        width: 1rem;
        padding: .1rem;
      }
      .icon-phone {
        color: #0af;
        font-size: .35rem;
      }
      .pic {
        width: .6rem;
      }
      li + li {
        border-top: 1px solid #e9e9e9;

      }
    }
  }
}