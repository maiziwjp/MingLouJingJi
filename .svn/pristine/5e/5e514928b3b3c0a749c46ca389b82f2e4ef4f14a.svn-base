<script>
	
</script> 
<script>

	$(document).ready(function(){
  		$("#beizhu").click(function(){
	    	$("#beizhu").animate({  	
	      	height:'2.0rem',
	    	});
	  	});
	});
	
	$(document).ready(function(){
  		$("#showphoto").click(function(){
	   		$("#foter").slideDown("slow");
	   		$("#beizhu").animate({  	
	      	height:'1.0rem',
	    	});
  		});
	});
	
	function quxiao(){		
   		$("#foter").slideUp("slow");
	}
	
	apiready = function(){
	
		clipBoard = api.require('clipBoard');
	   
	    api.setStatusBarStyle({
	        style: 'light',
	        color: '#000'
	    });
	    //获取数据
	    userid=$api.getStorage("userid");
	    customerid=api.pageParam.customerid;
	    orderid=api.pageParam.orderid;
	    customerName=api.pageParam.customerName;
		buildingName=api.pageParam.buildingName;
	    //初始化方法
		document.getElementById("deal_time").value=setDate();
		document.getElementById("customerName").innerHTML=customerName;
		document.getElementById("buildingName").innerHTML=buildingName;
	}
    
    function setDate(){
        var time=new Date();
      	month=time.getMonth()+1;
      	month=month<10?"0"+month:month;
	  	date=time.getDate();
	  	date=date<10?"0"+date:date;
	  	return time.getFullYear()+'-'+month+"-"+date;
  	}
    
    function deal_apply(){
		api.ajax({
	        url:ipAddress+'/order/dealApply',
	        method: 'post',
	        method: 'post',
	        timeout: 90,
	   		dataType: 'json',
	   		returnAll:false,
	        data:{
	        	values: {orderid: orderid,
	        		deal_time:document.getElementById("deal_time").value,
            		propertytype:document.getElementById("propertytype").value,
            		roomNum:document.getElementById("roomNum").value,
            		dealMoney:document.getElementById("dealMoney").value,
            		area:document.getElementById("area").value,
            		notes:document.getElementById("notes").value
	        	},
	        	files: {file: deal_apply_img}
	        }
	    },
	    function(ret, err) {
             api.toast({
                 msg:ret.msg
             });
             
             if(ret.code=="200")
	         {
	         	api.execScript({
				    name: 'root',
				    script: 'chooseframe()'
				});
	     		setTimeout(function (){
	     			 api.openWin({
	                     name: 'root',
	                     url: '../../../index.html'
		             });
	     		},1500);
	     	 }
	     	 
             locked=false;
	    })
	}
      
      
    function getpic(){
		api.getPicture({
			sourceType: 'album',
			encodingType: 'png',
			mediaValue: 'pic',
			destinationType: 'url',
			allowEdit: true,
			quality: 100,
			targetWidth: 100,
			targetHeight: 100,
			saveToPhotoAlbum: false
		    }, function(ret, err) {
			    if (ret && ret.data) {
			    console.log(JSON.stringify(ret));
				document.getElementById("foter").style.display="none";
				document.getElementById("buganga").src=ret.data;
				console.log(document.getElementById("buganga").src);
			    deal_apply_img=ret.data;
			} else {
				alert("插入失败");
			}
		});

    }
    
    
    function getcamer(){
	    api.getPicture({
	        sourceType: 'camera',
	    	encodingType: 'jpg',
	    	mediaValue: 'pic',
	    	destinationType: 'url',
	    	allowEdit: true,
	    	quality: 100,
	    	targetWidth: 100,
	    	targetHeight: 100,
	    	saveToPhotoAlbum: false
			}, function(ret, err) {
	   		 if (ret) {
	   		    document.getElementById("foter").style.display="none";
	   	     	document.getElementById("buganga").innerHTML="<img src="+JSON.stringify(ret.data)+'/>';
	  	  	}else {
	    	    alert("插入失败");
	   	 	}
		});
	}



</script>
</body>
</html>