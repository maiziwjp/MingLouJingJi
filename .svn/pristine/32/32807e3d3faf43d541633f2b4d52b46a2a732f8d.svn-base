<script type="text/javascript">
	apiready = function(){
		/* 状态栏高度获取 */
		var headerHeight; 
	    var header=document.getElementById("header");
	    var systemType = api.systemType;
	    var height=document.getElementById("connector").offsetHeight;
		if(systemType == "ios")
		{
		    header.style.top="20px";
		    headerHeight=20;
		}
		else
		{
			header.style.top="25px";
		    headerHeight=25;
		}
		//获取数据
	    mycustomerid=api.pageParam.mycustomerid;
	    customerid=api.pageParam.customerid;
	    
		api.openFrame({
	        name: 'connector.write',
	        url: './connector.write.html',
	        rect: {
		        x:0,
		        y:headerHeight+height,
	        },
	        vScrollBarEnabled:false,
	        hScrollBarEnabled:false,
	        pageParam:{
	        	mycustomerid:mycustomerid,
	        	customerid:customerid
	        },
	        reload:true,
	        allowEdit:true
        });
	};
	
