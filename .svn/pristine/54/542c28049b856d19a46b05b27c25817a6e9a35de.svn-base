              if(realname1!=document.getElementById("realname").value || gender1!=document.getElementById("gender").value || tel1!=document.getElementById("tel").value || type1!=document.getElementById("type").value||perfer1!=document.getElementById("perfer").value ||source1!=document.getElementById("source").value || reqloc1!=document.getElementById("reqloc").value)
              modiflag="true";
               else 
             modiflag="false";
             var aa;
              localStorage.setItem("aa",modiflag);
              
   
    }

