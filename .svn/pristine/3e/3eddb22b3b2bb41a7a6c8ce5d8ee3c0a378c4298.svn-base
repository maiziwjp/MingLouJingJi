.bg-gray {
  background: #e9e9e9;
}
#connector {
  text-align: center;
  line-height: .96rem;
  background: #fff;
  height: .96rem;
  padding: 0 .2rem;
  font-size: .3rem;
  .icon {
    font-size: .32rem;
    color: #0af;
  }
}
#connector-context {
  width: 7.5rem;
  margin: 0 auto;
  border: 1px solid transparent;
  .title {
    padding-left: .26rem;
    line-height: 1.8;
    font-size: .22rem;
  }
  .user-part {
    background: #fff; 
    padding:  .15rem .2rem;
    li { padding: .08rem 0}
    .pic {
      width: .7rem;
      height: .7rem;
      border-radius: 50%;
      vertical-align: middle;
    }
    .connector-info {
      display: inline-block;
      width: 5.9rem;
      vertical-align: middle;
      margin-left: .3rem;
      p:first-child {
        font-size: .28rem;
        line-height: .45rem;
        color: #333;
      }
      p {
        color: #888;
        font-size: .2rem;
      }
    }
    li + li .connector-info{
      border-top: 1px solid #e9e9e9;
    }
  }
}