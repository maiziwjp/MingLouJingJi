<script type="text/javascript">
    apiready = function () {
    	/* 获取封装的接口 */
    	fs = api.require("fs");
    	//alert($api.getStorage("areaid"));
        /* 状态栏高度获取 */
        //UIActionProgress = api.require('UIActionProgress');
        
		headerHeight=0; 
	    var header=document.getElementById("wrap");
	    var systemType = api.systemType;
	    height=document.getElementById("header").offsetHeight;
		if(systemType == "ios")
		{
		    header.style.top="20px";
		    headerHeight=20;
		}
		else
		{
			header.style.top="25px";
		    headerHeight=25;
		}
        
        
        funIniGroup();
        
        getArea();
        
        checkUpdate();
		
    }  
    
    //获取区域列表
	function getArea(){

	    oWrapper = document.getElementById('connector-context');
		$.ajax({
		  type: 'GET',
		  url:  ipAddress+'/areatag/getlist',
		  data: '',
		  dataType: 'json',
		  success: function(data){
			console.log(JSON.stringify(data));
			arrlist=data.arealist;
			xuanran(arrlist);
			document.getElementById("cityid").value=$api.getStorage("areaid")==0?1:$api.getStorage("areaid");
		  },
		  error: function(xhr, type){
		    alert("error");
		  }
		})
	}
	//渲染区域列表
    function xuanran(arrlist){
    	var temp=document.getElementById("sort");
    	var resultData ={dataList: arrlist};
    	var result = juicer(temp.innerHTML, resultData);
    	oWrapper.innerHTML = result;
	} 
    
    function checkUpdate(){
    	var installpath=$api.getStorage("installpath");
		console.log(installpath);
		if(installpath)
		{
			fs.remove({
	            path: installpath
	        },function(ret, err){
	            if(ret.status)
	            {
	            	$api.setStorage("installpath","");
	            	api.toast({
	                    msg:'已为您删除安装包!'
                    });
	            }
	        });
        }
        if (api.systemType == "android") {
	    	$.ajax({
			  type: 'GET',
			  url: ipAddress+'/minglouapp/version/checkVersion/'+api.appVersion+'/1',
			  data: '',
			  success: function(data){
			 // 	alert(JSON.stringify(data));
			    if(!data.IfLatest)
			    {
				    	api.confirm({
		                    title : '有新的版本,是否下载并安装 ',
		                    msg : data.latestVersion.content,
		                    buttons : ['确定', '取消']
		                }, function(ret, err) {
		                    if (ret.buttonIndex == 1) {
		                        api.showProgress({
								    style: 'default',
								    animationType: 'fade',
								    title: '正在下载中...',
								    text: '请稍等',
								    modal: false
								});
	                            api.download({
	                                url : "http://www.minglou360.com:8080/apk/mingloujingji6.apk",
	                                report : true
	                            }, function(ret, err) {
	                                if (ret && 0 == ret.state) {/* 下载进度 */
	                                }
	                                if (ret && 1 == ret.state) {/* 下载完成 */
	                                    api.hideProgress();
	                                    var savePath = ret.savePath;
	                                    $api.setStorage("installpath",savePath);
	                                    api.installApp({
	                                        appUri : savePath
	                                    });
	                                }
	                            });
		                    }
		                });
			    }
			    locked=false;
			  },
			  error: function(xhr, type){
			  	alert("error");
			    locked=false;
			  }
			})
		}
		if (api.systemType == "ios") {
			$.ajax({
			  type: 'GET',
			  url:  ipAddress+'/minglouapp/version/checkVersion/'+api.appVersion+'/0',
			  data: '',
			  dataType: 'json',
			  success: function(data){
			    if(!data.IfLatest)
			    {
				    api.alert({msg:'有新版本啦！请去appstore下载最新版本'});	
			    }
			  },
			  error: function(xhr, type){
			    locked=false;
			  }
		   })
         }
    }


    function progressStart(){
    	UIActionProgress.open({
		     maskBg: 'rgba(0,0,0,0.5)',
		     styles: {
		         h: 108,
		         bg: '#fff',
		         title: {
		             size: 13,
		             color: '#000',
		             marginT: 10
		         },
		         msg: {
		             size: 12,
		             color: '#000',
		             marginT: 5
		         },
		         lable: {
		             size: 12,
		             color: '#696969',
		             marginB: 5
		         },
		         progressBar: {
		             size: 2,
		             normal: '#000',
		             active: '#4876FF',
		             marginB: 35,
		             margin: 5
		         }
		     },
		     data: {
		         title: '正在下载',
		         value: 0
		     }
		 },function(ret){
		 });
    }
    
    function close(){
        api.closeWin();
    }

    function funIniGroup(){
        var eHeaderLis = $api.domAll('header li'),
            frames = [];
        //var iframe = ["building.html", "connector.html", "information.html", "AboutMy.html"];
        var iframe = ["building/building.html", "customer/connector.html", "customer/connector.remark.html","aboutMy/AboutMy.html"];        
        for (var i = 0,len = 4; i < len; i++) {
                frames.push( { 
                    name: 'frame'+i, 
                    url: './html/'+iframe[i], 
                    bgColor : 'rgba(0,0,0,.2)',
                    bounces:true
                } );
        }
        api.openFrameGroup({
            name: 'group',
            scrollEnabled: false,
            rect: {
                x: 0, 
                y: headerHeight+height,
                h:api.winHeight-140
            },
            index: 0,
            frames: frames
        }, function (ret, err) {

        });
        
        for (var i = 0,len = 4; i < len; i++) {
            api.setFrameAttr({
			    name: 'frame'+i,
	            bounces: false,
	            vScrollBarEnabled:false,
			});
        }
    }

    // 随意切换按钮
    function randomSwitchBtn( tag ) {
        api.setFrameGroupAttr({
	        name: 'group',
	        hidden:false
        });
        if( tag == $api.dom('#footer li.active') )return;
        var eFootLis = $api.domAll('#footer li'),
            eHeaderLis = $api.domAll('header li'),
            index = 0;
        for (var i = 0,len = eFootLis.length; i < len; i++) {
            if( tag == eFootLis[i] ){
                index = i;
            }else{
                $api.removeCls(eFootLis[i], 'active');
                $api.removeCls(eHeaderLis[i], 'active');
            }
        }
        $api.addCls( eFootLis[index], 'active');
        $api.addCls( eHeaderLis[index], 'active');
        api.setFrameGroupIndex({
            name: 'group',
            index: index
        });
        if(index!=1)
            api.closeFrame({
	            name: 'connector.remark'
            });
        else
        {
        	var value=document.getElementsByName("frame")[0].checked?0:1;
        	if(value)
        	{
        		api.setFrameGroupAttr({
			        name: 'group',
			        hidden:true
		        });
		        api.openFrame({
				    name: 'connector.remark',
				    url: './html/customer/connector.remark.html',
				    rect: {
				        x: 0, 
		                y: headerHeight+height, 
		                w: api.winWidth, 
		                h: api.winHeight-140
				    },
				    bounces: false,
				    bgColor: 'rgba(0,0,0,0)',
				});
        	}	
        }
    }
    
    function chooseframe(){
       var value=document.getElementsByName("frame")[0].checked?0:1;
       console.log(value);
       if(value)
       {
	       api.setFrameGroupAttr({
		        name: 'group',
		        hidden:true
	        });
	        api.openFrame({
			    name: 'connector.remark',
			    url: './html/customer/connector.remark.html',
			    rect: {
			        x: 0, 
	                y: headerHeight+height, 
	                w: api.winWidth, 
	                h: api.winHeight-140
			    },
			    bounces: false,
			    bgColor: 'rgba(0,0,0,0)',
			});
		}
		else
		{
	        api.setFrameGroupAttr({
		        name: 'group',
		        hidden:false
	        });
	        api.setFrameAttr({
		        name: 'connector.remark',
		        hidden:true
	        });
	        api.setFrameGroupIndex({
			    name: 'group',
			    index: 1,
			    scroll: true
			});
		}
    }
    
    function init(){
        //初始化显示的楼盘
  
        api.execScript({
			frameName: 'frame0',
	        script: 'choose('+document.getElementById("cityid").value+')'
        }); 
        
        var eFootLis = $api.domAll('#footer li');
            eHeaderLis = $api.domAll('header li');
        for (var i = 0,len = eFootLis.length; i < len; i++) {
            $api.removeCls(eFootLis[i], 'active');
            $api.removeCls(eHeaderLis[i], 'active');
        }
        $api.addCls( eFootLis[0], 'active');
        $api.addCls( eHeaderLis[0], 'active');
        api.setFrameGroupIndex({
		    name: 'group',
		    index: 0,
		});
    }
    
    function closewin(){
        api.closeWin();
    }
    
    
    function choose(){
		var val=document.getElementById("cityid").value;
		api.execScript({
			frameName: 'frame0',
	        script: 'choose('+val+')'
        });    	
    }
    
	
	/* 打开其他页面 */
    //添加客户
    function openadd(){
        if($api.getStorage("userid"))
        {
        	if($api.getStorage("storeid")){
		        api.openWin({
			      name: 'addCustomer_win',
			      url: './html/customer/addCustomer_win.html',
		       });
	       }
	       else
	       {
	       	   api.confirm({
				    title: '添加门店编号',
				    msg: '您尚未添加门店编号，是否去填写门店编号',
				    buttons: ['取消', '是的']
					}, function(ret, err){
					    if(ret.buttonIndex==2)
					        api.openWin({
			                    name: 'personalinformation_win',
			                    url: './html/aboutMy/personal_info/personalinformation_win.html'
		                    });
			  });
	       }
	    }
	    else
		{
		    api.toast({
	            msg:'请先登录！'
            });
		}
    }
    //楼盘搜索
    function opensearch(){
	    api.openWin({
	        name: 'building_search_win',
	        url: './html/building/building_search_win.html'
        });
	}
</script>