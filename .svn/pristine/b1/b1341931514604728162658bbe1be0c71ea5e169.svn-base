.color-gray {background: #f5f5f5; }
.article {width: 7.5rem;margin: 0 auto;padding: 0.3rem .3rem 1rem .3rem; }
/* 轮播图 */
.header {width: 7.5rem;overflow: hidden;margin: 0 auto; }

#picWrap {width: 100%; }

#picList {width: 22.5rem;overflow: hidden; }

#picList img {width: 7.5rem;float: left; }

#wraper {position: relative; }

#picBtns {position: absolute;bottom: .3rem;right: .4rem; }

#picBtns span {width: .1rem;height: .1rem;border-radius: 50%;background: #fff;float: left;margin-left: 0.15rem; }

#picBtns span.active {background: #ff9100; }

.imgs-wrap img {height: 5rem;width: 7.5rem; }
